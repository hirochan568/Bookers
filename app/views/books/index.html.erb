<%= flash[:notice] %>
  <h1>Books</h1>

  <div class="table-box">
    <table>
      <tr>
    		<td>Title</td>
    		<td>Body</td>
    		<td colspan="3"></td>
      </tr>
      <div class = "t-table">
        <% @books.each do |book| %>
          <tr>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
              <td><%= link_to "show", book_path(book.id) %></td>
              <td><%= link_to "edit", edit_book_path(book) %></td>
              <td><%= link_to "destroy", book_path(book.id), method: :delete,  "data-confirm" => "Are you sure?" %></td>
          </tr>
        <% end %>
      </div>
    </table>
  </div>

    <h3>New book</h3>
    <% if @book.errors.any? %>
      <%= @book.errors.count %>件のエラーが発生しました
      <% @book.errors.full_messages.each do |message| %>
       <p><%= message %></p>
      <% end %>
    <% end %>
    <%= form_for(@book) do |f| %>
    <%= f.label :Title %><br/><%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>

    <br><%= f.submit 'Create Book' %></br>

    <% end %>